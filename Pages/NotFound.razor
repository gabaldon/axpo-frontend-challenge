@page "/not-found"
@layout MainLayout


<section class="flex flex-col items-center justify-center h-screen bg-surface text-center px-4">
    <!-- Error Icon -->
    <svg class="h-24 w-24 text-axpo-red mb-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8v4m0 4h.01M12 2a10 10 0 100 20 10 10 0 000-20z" />
    </svg>

    <!-- Error Text -->
    <h1 class="text-4xl font-lucida font-bold mb-2">404</h1>
    <p class="text-lg font-bold text-text-primary mb-4">Page Not Found</p>
    <p class="text-sm text-text-secondary mb-6">Sorry, the page you are looking for does not exist.</p>

    <!-- Back Button -->
    <a href="/" class="inline-block px-6 py-2 bg-axpo-red text-white font-bold rounded transition">
        Go to Home
    </a>
</section>